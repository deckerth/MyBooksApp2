                                                        KeyTime="0:0:0"
                                                        Value="{Binding TemplateSettings.OpenPaneLength, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                                    <SplineDoubleKeyFrame
                                                        KeySpline="0.1,0.9 0.2,1.0"
                                                        KeyTime="0:0:0.35"
                                                        Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
